@model MedCheck.Models.ViewModels.MedWorkerViewModel

<div class="modal-header">
    <button class="close" data-dismiss="modal" area-hidden="true">X</button>
</div>
<div class="modal-body">
    <form asp-action="UpdateProfile" asp-controller="MedWorker" method="post">
        <div class="form-group">
            <div class="row justify-content-center">
                <label class="col-lg-3 text-center" asp-for="medWorker.Name">Name:</label>
                <div class="col-7" align="center">
                    <input class="form-control w-100" type="text" asp-for="medWorker.Name" value="@Model.medWorker.Name">
                </div>
                <span asp-validation-for="medWorker.Name"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row justify-content-center">
                <label class="col-lg-3 text-center" asp-for="medWorker.FamilyName">Family Name:</label>
                <div class="col-7" align="center">
                    <input class="form-control w-100" type="text" asp-for="medWorker.FamilyName" value="@Model.medWorker.FamilyName">
                </div>
                <span asp-validation-for="medWorker.FamilyName"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row justify-content-center">
                <label class="col-lg-3 text-center" asp-for="medWorker.BirthDate">Birth Date:</label>
                <div class="col-7" align="center">
                    <input class="form-control w-100" type="datetime" asp-for="medWorker.BirthDate" value="@Model.medWorker.BirthDate">
                </div>
                <span asp-validation-for="medWorker.BirthDate"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row justify-content-center">
                <label class="col-lg-3 text-center" asp-for="medWorker.Price">Price:</label>
                <div class="col-7" align="center">
                    <input class="form-control w-100" type="number" min="0" asp-for="medWorker.Price" value="@Model.medWorker.Price">
                </div>
                <span asp-validation-for="medWorker.Price"></span>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary" data-save="modal" id="save">Save</button>
        </div>
    </form>
</div>
